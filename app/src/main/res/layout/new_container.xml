<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/new_gray_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.core.widget.NestedScrollView
    android:id="@+id/nesteed_scroll"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/new_gray_color">
<RelativeLayout android:id="@+id/container_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ProgressBar
        android:id="@+id/container_pb"
        android:layout_width="100dp"
        android:elevation="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:orientation="vertical">
<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            >-->

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorUnselectedColor="@color/white"
                app:sliderIndicatorSelectedColor="@color/newYellowBg"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true"
                />
<!--        </androidx.cardview.widget.CardView>-->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_15dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:layout_gravity="center">
    <TextView
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_18sp"
        android:text="Categories"/>
</LinearLayout>
      <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ec_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
          android:layout_gravity="center"
            android:nestedScrollingEnabled="false"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_yellow_pd_bg"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:textColor="#544107"
                android:text="Deal of the Day"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:elevation="5dp"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_20dp"
                android:background="@drawable/dod_tv_bg"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/img_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:paddingStart="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    >
                    <ImageView
                        android:id="@+id/dod_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:scaleType="centerCrop"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/dimen_10dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/deal_pro_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cat_item_image"
                        android:textColor="@color/white"
                        android:text="Name"
                        android:textSize="20sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/dod_pro_dis_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cat_item_image"
                        android:textColor="@color/white"
                        android:text="This Chicken Lollipop are prescribed for"
                        android:textAllCaps="false"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textSize="13sp"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/img_ll"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="35sp">
                    <Button
                        android:id="@+id/dod_buy_btn"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/et_bg_new"
                        android:backgroundTint="@color/newYellow"
                        android:text="Buy Now"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:textColor="@color/new_gray_color"
                        android:layout_gravity="start"
                        android:textSize="@dimen/dimen_16sp"
                        android:textAllCaps="true"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:paddingEnd="@dimen/dimen_15dp"
                android:layout_height="35sp">
                <TextView
                    android:id="@+id/price_dod_tv"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/newYellow"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_16sp"
                    android:text="00"
                    android:layout_height="wrap_content"
                   />
                <TextView
                    android:id="@+id/slash_dob"
                    android:layout_width="wrap_content"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/newYellow"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_height="wrap_content"
                    android:text="/"
                    />
                <TextView
                    android:id="@+id/price_pri_dod_tv"
                    android:layout_width="wrap_content"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/newYellow"
                    android:textStyle="bold"
                    android:text="00"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/newYellow"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cat_item_image"
                android:textColor="@color/black"
                android:text="Best Sellers of the Month"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bsom_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:nestedScrollingEnabled="false"/>
<!--            <ImageView-->
<!--                android:id="@+id/bs_iv"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="240dp"-->
<!--                android:layout_marginStart="@dimen/dimen_20dp"-->
<!--                android:layout_marginEnd="@dimen/dimen_20dp"-->
<!--                android:layout_marginTop="@dimen/dimen_10dp"-->
<!--                android:layout_marginBottom="@dimen/dimen_10dp"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:text="What Customers Say"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wcs_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:nestedScrollingEnabled="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/newYellow"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/delivery_new"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:text="Delivery \nwithin 90 minutes launching soon.."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/truck_new"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:text="Packed \nProcessed and Delivered the same day.."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/halal_new"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:text="Halal\n certified Cuts"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/black"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/container_delivery_icon"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:tint="@color/newYellowBg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-15dp"
                android:textAllCaps="true"
                android:visibility="gone"
                android:textColor="@color/newYellowBg"
                android:text="Packed Processed"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&amp; delivered"
                    android:textColor="@color/newYellowBg"
                    /><TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="20sp"
                android:textColor="@color/newYellowBg"
                android:text="Same Day"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:paddingStart="@dimen/dimen_20dp"
                android:paddingEnd="@dimen/dimen_20dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ninty_min_icon"
                        android:tint="@color/newYellowBg"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/newYellowBg"
                        android:text="Delivery within\n 90 min"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/halal_icon"
                        android:tint="@color/newYellowBg"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/newYellowBg"
                        android:text="Halal Certified\n Cuts"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:text="Follow us on"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/facebook_icon_nc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/white"
                        android:src="@drawable/fb"/>
                    <ImageView
                        android:id="@+id/insta_icon_nc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:tint="@color/white"
                        android:src="@drawable/insta_new"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:tint="@color/white"
                        android:visibility="gone"
                        android:src="@drawable/gog"/>
                    <ImageView
                        android:id="@+id/tweet_icon_nc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:tint="@color/white"
                        android:src="@drawable/twit"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_light_italic"
                    android:gravity="center"
                    android:text="2020 Ab Fresh, All Rights Reserved"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="italic" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_light_italic"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:text="Powered by Jazz eats private limited"
                    />
            </LinearLayout>
        </LinearLayout>
        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true" />
    </LinearLayout>
</RelativeLayout>





</androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/no_data_ll_nc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tint="@color/white"
            android:src="@drawable/ic_no_data"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Sorry for Inconvenience.\nPlease Try After Some Time"/>
    </LinearLayout>
</RelativeLayout>
