<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rec_adpt_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@drawable/fish_banner" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rec_adpt_image"
        android:layout_centerHorizontal="true"
        app:contentPadding="5dp"
        app:cardCornerRadius="0dp">
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_centerHorizontal="true"
        android:gravity="center|center_vertical|center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recipie_adpt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical|center"
            style="@android:style/TextAppearance.Small"
            android:layout_below="@+id/blog_adpt_image"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Delicious Fish Fry "
            />
        <TextView
            android:id="@+id/recipie_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="2"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:text="@string/lorem"/>

        <LinearLayout

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:background="@drawable/red_btn_join_now"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_recipe_buttn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center|center_horizontal"
                android:visibility="visible"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:text="View Recipe"/>
        </LinearLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
