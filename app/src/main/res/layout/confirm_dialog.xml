<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/gender_heading_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert!"
        android:background="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/newYellowBg"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/alert_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Do you really want to cancel an order?"
        android:layout_below="@+id/gender_heading_tv"
        android:textSize="@dimen/dimen_16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="10dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/alert_tv">
    <TextView
        android:id="@+id/yes_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:background="@color/tab_color_selected2"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/no_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="No"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"/>
</LinearLayout>
</RelativeLayout>