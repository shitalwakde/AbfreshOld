<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/contact_img"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:src="@drawable/new_logo_yellow"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_img"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/newYellow"
            android:layout_marginBottom="40dp"
            android:text="@string/contactus_msg"
            android:gravity="center"/>
        <Button
            android:id="@+id/call_dialler"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:text="Call Us Maybe"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/newYellow"
            android:textAllCaps="false"
            android:background="@drawable/refer_btn_bg"/>
        <Button
            android:id="@+id/emailus"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:text="Drop Us a Line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/newYellow"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/refer_btn_bg"/>
    </LinearLayout>

