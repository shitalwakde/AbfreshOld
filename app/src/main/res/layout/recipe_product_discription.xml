<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_gray_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:id="@+id/rpd_pb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        android:background="@android:color/transparent"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/recipe_pro_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/newToolbar"
        app:title=""
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:titleMarginStart="0dp"
        android:background="@color/new_gray_color"
        app:titleMargin="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/repd_home_btn"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/action_back"
                android:src="@drawable/left_arrow_new"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="55dp"
                android:layout_toEndOf="@+id/repd_home_btn">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/action_back"
                    android:src="@drawable/new_logo_yellow"/>
            </RelativeLayout>

        </RelativeLayout>
<!--        <TextView-->
<!--            android:id="@+id/toolbar_tv"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:textColor="#fff"-->
<!--            android:textSize="16sp"-->
<!--            android:ellipsize="end"-->
<!--            android:layout_marginEnd="55dp"-->
<!--            app:titleTextAppearance="@style/ActionBarTextAppearance"-->
<!--            android:gravity="center|center_horizontal|center_vertical"-->
<!--            android:singleLine="true" />-->
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/toolbar_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/newYellowBg"
        android:padding="@dimen/dimen_10dp"
        android:text="Make Payment"
        android:elevation="@dimen/dimen_10dp"
        android:layout_below="@+id/recipe_pro_toolbar"

        />
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:layout_below="@+id/toolbar_tv">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/above_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/rec_pro_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:focusableInTouchMode="true"
        />
        <LinearLayout
            android:id="@+id/rec_pro_up_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/size_bg"
            android:backgroundTint="@color/newYellow"
            android:padding="15dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rec_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical|center"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingStart="8dp"
                android:paddingBottom="5dp"
                android:maxLines="2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:text="Attrachi Kurumulakittu Vechathu or Malabar Lamb with black peeper "
                />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:gravity="center_horizontal|center"
                   android:layout_height="100dp"
                   android:orientation="vertical">
                   <ImageView
                       android:id="@+id/recipe_type_img"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:tint="@color/black"
                       android:src="@drawable/ic_eat"/>
                   <TextView
                       android:id="@+id/recipe_type_rd_tv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:textColor="@color/black"
                       android:layout_marginTop="5dp"
                       android:text="Lunch"/>
               </LinearLayout>
               <View
                   android:layout_width="1dp"
                   android:layout_height="60dp"
                   android:layout_margin="5dp"
                   android:layout_gravity="center_vertical|center_horizontal|center"
                   android:background="@android:color/darker_gray"/>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:gravity="center_horizontal|center"
                   android:layout_height="100dp"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="25dp"
                       android:layout_height="30dp"
                       android:tint="@color/black"
                       android:src="@drawable/ic_time"/>
                   <TextView
                       android:id="@+id/duration_rd"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:textColor="@color/black"
                       android:layout_marginTop="5dp"
                       android:text="0.55"/>
               </LinearLayout>
               <View
                   android:layout_width="1dp"
                   android:layout_height="60dp"
                   android:layout_margin="5dp"
                   android:layout_gravity="center_vertical|center_horizontal|center"
                   android:background="@android:color/darker_gray"/>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:gravity="center_horizontal|center"
                   android:layout_height="100dp"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:tint="@color/black"
                       android:src="@drawable/serves_icon"/>
                   <TextView
                       android:id="@+id/serves_rd_tv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:textColor="@color/black"
                       android:layout_marginTop="5dp"
                       android:text="Serves: 4"/>
               </LinearLayout>
           </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ingradient_layout_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_pro_up_ll"
            android:paddingBottom="100dp"
            android:orientation="vertical">


        <TextView
            android:id="@+id/rec_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:background="#F8FCFCFD"
            android:visibility="gone"
            android:gravity="start|center_vertical"
            android:text="Black peeper spiced Malabar Lamb Delicacy"
            />
            <TextView
                android:id="@+id/recipe_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/newYellow"
                android:gravity="start|center_vertical"
                android:text="Ingredients"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingradient_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/method_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xyz"
                android:textColor="@color/newYellow"
                android:textSize="14sp"
                android:padding="20dp"
                android:gravity="start"
                android:visibility="gone"
                />
        </LinearLayout>
</RelativeLayout>



</RelativeLayout>
</androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:baselineAligned="false"
            android:background="#F8FAFAFB"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ingradient_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#F8FAFAFB"
                android:gravity="center_horizontal|center_vertical|center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:id="@+id/ing_view"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/tab_color_selected2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal|center_vertical|center"
                    android:layout_margin="10sp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ingradient_iv"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_ingradient"/>
                    <TextView
                        android:id="@+id/ingradient_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="10sp"
                        android:text="Ingredients"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/method_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#F8FAFAFB"
                android:gravity="center_horizontal|center_vertical|center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:id="@+id/mtd_view"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/tab_color_selected2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal|center_vertical|center"
                    android:layout_margin="10sp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/method_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_cooking_method"/>
                    <TextView
                        android:id="@+id/method_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="10sp"
                        android:text="Method"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>