<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/location_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways"
        android:theme="@style/newToolbar"
        app:title=""
        app:theme="@style/ThemeOverlay.AppCompat"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:src="@drawable/logo_new_black"/>
            <ImageView
                android:id="@+id/lfp_close_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/cross_one"
                app:tint="@color/black" />
        </RelativeLayout>

<!--        <TextView-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent"-->
<!--    android:text="Choose your delivery location"-->
<!--    android:textColor="#fff"-->
<!--    android:textSize="14sp"-->
<!--    app:titleTextAppearance="@style/ActionBarTextAppearance"-->
<!--    android:gravity="center|center_horizontal|center_vertical"/>-->
</androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:visibility="gone"
        android:background="@android:color/black"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Choose your delivery location"
        android:textColor="@color/newYellowBg"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cs_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_above="@+id/cs_ext"
                android:textColor="@color/black"
                android:visibility="gone"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Cook Something"/>
            <TextView
                android:id="@+id/cs_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:visibility="gone"
                android:layout_above="@+id/search_ll"
                android:layout_marginBottom="40dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Extraordinary"/>

            <ProgressBar
                android:id="@+id/lfp_pb"
                android:layout_width="30dp"
                android:layout_centerHorizontal="true"
               android:layout_above="@+id/uml_rl"
                android:layout_height="50dp"/>

<!--                 <Spinner-->
<!--                     android:id="@+id/spinner_countries"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="end"-->
<!--                    />-->
            <ImageView
                android:id="@+id/locint_iv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/new_logo_yellow"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/lfp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold"
                android:layout_below="@+id/locint_iv"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="Choose your delivery location"/>
            <LinearLayout
                android:id="@+id/search_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_horizontal|center|center_vertical"
                android:paddingEnd="5dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/lfp_title"
                android:background="@drawable/refer_btn_bg"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner_countries"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    style="@style/SpinnerTheme"
                    android:dropDownWidth="fill_parent"
                    android:overlapAnchor="false"
                    android:layout_gravity="end|center_vertical"/>
            <TextView
                android:id="@+id/search_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:hint="Search City"
                android:enabled="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center|center_vertical"
                android:focusable="false"
                android:textSize="14sp"
                android:textColor="@color/colorgray"
                android:focusableInTouchMode="false"
                android:gravity="start|center_vertical"/>
            </LinearLayout>

                <EditText
                    android:id="@+id/pincode_et"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Pincode"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:maxLength="6"
                    android:layout_below="@+id/search_ll"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:textColorHint="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/refer_btn_bg"
                    android:layout_centerInParent="true"
                    android:gravity="start|center_vertical"/>
            <Button
                android:id="@+id/cl_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Submit"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cs_or"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/et_bg_new"/>

            <LinearLayout
                android:id="@+id/cs_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:layout_below="@+id/pincode_et"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="1dp"
                    android:background="@color/tab_color_selected2"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_below="@+id/order_amount_ll"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:tint="@android:color/tertiary_text_light"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Or"/>

                <TextView
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="1dp"
                    android:background="@color/tab_color_selected2"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_below="@+id/order_amount_ll"/>
            </LinearLayout>





            <RelativeLayout
                android:id="@+id/uml_rl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:visibility="visible"
                android:gravity="center_horizontal|center_vertical"
                android:layout_centerInParent="true"
                android:layout_below="@+id/cl_btn"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/et_bg_new"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rocket_icon"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_my_location"
                    android:rotation="-45"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use my location"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/rocket_icon"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"/>


            </RelativeLayout>
            <TextView
                android:id="@+id/notice_tv_lfp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uml_rl"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="@color/newYellow"
               />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>