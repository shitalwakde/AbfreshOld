<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp">
        <TextView
            android:id="@+id/gender_heading_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update App"
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/alert_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Update Your App for latest features  "
            android:layout_below="@+id/gender_heading_tv"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:padding="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_below="@+id/alert_tv">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="No"
                android:layout_margin="@dimen/dimen_10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_toStartOf="@+id/btnSubmit"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/btnSubmit"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="Yes"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:backgroundTint="@color/yellow"
                android:background="@drawable/contac_btn_bg"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>